{
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "noImplicitAny": false,
      "esModuleInterop": true,
      "baseUrl": "./",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "paths": {
        "@ibex/*": [
            "./src/ibex/*"
        ],
    },
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "watchOptions": {
      "synchronousWatchDirectory": true
    }
  }
  